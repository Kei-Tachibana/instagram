<% post.comment each do |comment| %>
  <div class="mb-2">
    <% if commet.user == current_user %>
      <%= link_to "Delete Comment", comment_path(comment), method: :delete, remote: true, class: "core-sprite delete-comment hide-text" %>
    <% end %>
    <span><strong><%= comment.user.name %></strong></span>
    <span><%= comment.content %></span>
  </div>
<% end %>
